<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/cell_background" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/IVFlechaAtras"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:clickable="true"
                    android:tint="@color/quantum_black_100"
                    app:srcCompat="@drawable/regreso" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="Buscar Viaje"
                    android:textColor="@color/places_ui_default_primary_dark"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/IVAceptarBuscarViaje"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="165dp"
                    android:tint="@color/colorPrimary"
                    app:srcCompat="@drawable/check" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <EditText
            android:id="@+id/ETOrigenBuscarViaje"
            style="@android:style/Widget.Holo.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/layout_drawable_2"
            android:ems="10"
            android:hint="¿Desde donde sales?"
            android:inputType="textCapWords"
            android:padding="8dp"

            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorGrisLight"
            android:textSize="26dp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/ETDestinoBuscarViaje"
            style="@android:style/Widget.Holo.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/layout_drawable_2"
            android:ems="10"
            android:hint="¿Hacia donde vas?"
            android:inputType="textCapWords"
            android:padding="8dp"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorGrisLight"
            android:textSize="26dp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/ETFechaViajeBuscarViaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/layout_drawable_2"
            android:clickable="true"
            android:ems="10"
            android:focusable="false"
            android:hint="¿Qué día?"
            android:inputType="text"
            android:padding="8dp"

            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorGrisLight"
            android:textSize="26dp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/ETHoraViajeBuscarViaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/layout_drawable_2"
            android:clickable="true"
            android:ems="10"
            android:focusable="false"
            android:hint="¿A qué hora?"
            android:inputType="text"
            android:padding="8dp"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorGrisLight"
            android:textSize="26dp"
            android:textStyle="normal" />


    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_example_lottie_view"
        android:layout_width="match_parent"
        android:layout_height="157dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_fileName="12164-travel-app.json"
        app:lottie_imageAssetsFolder="assets"
        app:lottie_loop="true" />
</androidx.constraintlayout.widget.ConstraintLayout>