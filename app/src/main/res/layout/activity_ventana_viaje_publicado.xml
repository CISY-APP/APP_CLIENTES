<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".vistas.VentanaViajePublicado">

    <ScrollView
        android:id="@+id/scrollViewViajePublicado"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayoutPrincipalViajePublicado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:paddingBottom="10dp"
            android:orientation="vertical"
            android:paddingStart="15dp"
            android:paddingLeft="15dp"
            android:paddingEnd="15dp"
            android:paddingRight="15dp">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animacionViajePublicado"
                android:layout_width="match_parent"
                android:layout_height="288dp"
                app:lottie_autoPlay="true"
                app:lottie_fileName="20940-clap-animation-yellow.json"
                app:lottie_imageAssetsFolder="assets"
                app:lottie_loop="true" />

            <TextView
                android:id="@+id/textViewMensajeViajePublicado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="@string/txt_informativo_ventanaViajePublicado"
                android:textColor="@color/colorBlanco"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btListoViajePublicado"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="75dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/layout_drawable_2"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/bt_listo_ventanaViajePublicado"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>