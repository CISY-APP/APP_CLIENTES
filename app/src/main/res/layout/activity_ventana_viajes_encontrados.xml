<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:paddingRight="50dp"
                android:text="@string/viajes_encontrado"
                android:textColor="@color/colorBlanco"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/IVLupa"
                android:layout_width="89dp"
                android:layout_height="26dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:tint="@color/colorBlanco"
                app:srcCompat="@drawable/lupa"
                android:focusable="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="52dp"
                android:layout_height="18dp"
                android:paddingLeft="30dp"
                android:paddingTop="6dp"
                android:tint="@color/colorBlanco"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/ETOrigen"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.112"
                app:srcCompat="@drawable/circulo" />

            <TextView
                android:id="@+id/TVOrigenViajesEncontrados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:text="@string/Publicarviaje_Origen"
                android:textColor="@color/colorBlanco"
                android:textSize="18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="52dp"
                android:layout_height="20dp"
                android:paddingLeft="30dp"
                android:paddingTop="6dp"
                android:tint="@color/colorBlanco"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/ETDestino"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.184"
                app:srcCompat="@drawable/marcador" />

            <TextView
                android:id="@+id/TVDestinoViajesEncontrados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:paddingBottom="5dp"
                android:text="@string/Publicarviaje_Destino"
                android:textColor="@color/colorBlanco"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TVFechaViajesEncontrados"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@color/colorGrisLight"
                android:paddingTop="5dp"
                android:paddingBottom="5dp" 
                android:gravity="center"
                android:text="05/05/2020"
                android:textColor="@color/colorGris"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/TVHoraViajesEncontrados"
                android:layout_width="211dp"
                android:layout_height="wrap_content"
                android:background="@color/colorGrisLight"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:text="17:30"
                android:textColor="@color/colorGris"
                android:textSize="18dp" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RVViajesEncontrados"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBlanco"
            android:clipToPadding="false"
            android:paddingLeft="18dp"
            android:paddingTop="18dp"
            android:paddingRight="18dp">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>