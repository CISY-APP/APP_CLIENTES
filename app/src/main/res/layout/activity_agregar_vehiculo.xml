<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/cell_background"    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/IVFlechaAtrasAgregarVehiculo"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:clickable="true"
                    android:tint="@color/quantum_black_100"
                    app:srcCompat="@drawable/regreso" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="Agregar vehículo"
                    android:textColor="@color/places_ui_default_primary_dark"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/IVAceptarAgregarVehiculo"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="120dp"
                    android:tint="@color/colorPrimary"
                    app:srcCompat="@drawable/check" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/IMGCocheAgregar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/coche"
                    app:civ_circle_background_color="#eceff1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:alpha="0.35"
                    android:background="#04FFFFFF"
                    android:tint="#11FFFFFF"
                    app:layout_constraintBottom_toBottomOf="@+id/IMGCocheAgregar"
                    app:layout_constraintEnd_toEndOf="@+id/IMGCocheAgregar"
                    app:layout_constraintStart_toStartOf="@+id/IMGCocheAgregar"
                    app:layout_constraintTop_toTopOf="@+id/IMGCocheAgregar"
                    app:srcCompat="@drawable/editar" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MATRÍCULA *"
                android:textColor="@color/colorPrimary"
                android:textSize="10sp"
                android:layout_marginTop="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/ETMatriculaVehiculo"
                style="@android:style/Widget.Holo.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:background="@drawable/layout_drawable_2"
                android:clickable="true"
                android:ems="10"
                android:focusable="true"
                android:hint="MATRICULA"
                android:inputType="textPersonName"
                android:padding="8dp"
                android:textColor="@color/places_ui_default_primary_dark"
                android:textColorHint="@color/colorGrisLight"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/TVNumeroPlazas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NUMERO DE PLAZAS *"
                android:textColor="@color/colorPrimary"
                android:textSize="10sp"
                android:layout_marginTop="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/layout_drawable_2">

                <Spinner
                    android:id="@+id/spinner_numero_plazas"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/colorPrimary" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="MARCA"
                android:textColor="@color/colorPrimary"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/ETMarcaVehiculo"
                style="@android:style/Widget.Holo.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:background="@drawable/layout_drawable_2"
                android:clickable="true"
                android:ems="10"
                android:focusable="true"
                android:hint="MARCA"
                android:inputType="textPersonName"
                android:padding="8dp"
                android:textColor="@color/places_ui_default_primary_dark"
                android:textColorHint="@color/colorGrisLight"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MODELO"
                android:textColor="@color/colorPrimary"
                android:textSize="10sp"
                android:layout_marginTop="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/ETModeloVehiculo"
                style="@android:style/Widget.Holo.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:background="@drawable/layout_drawable_2"
                android:clickable="true"
                android:ems="10"
                android:focusable="true"
                android:hint="MODELO"
                android:inputType="textPersonName"
                android:padding="8dp"
                android:textColor="@color/places_ui_default_primary_dark"
                android:textColorHint="@color/colorGrisLight"
                android:textStyle="normal" />



            <TextView
                android:id="@+id/TVTipoCombustible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TIPO DE COMBUSTIBLE"
                android:textColor="@color/colorPrimary"
                android:textSize="10sp"
                android:layout_marginTop="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/layout_drawable_2">

                <Spinner
                    android:id="@+id/spinner_tipo_combustible"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/colorPrimary" />

            </LinearLayout>

            <TextView
                android:id="@+id/TVColorCoche"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="COLOR DEL VEHÍCULO"
                android:textColor="@color/colorPrimary"
                android:textSize="10sp"
                android:layout_marginTop="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <EditText
                    android:id="@+id/BTSeleccionarColorCoche"
                    style="@android:style/Widget.Holo.EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/layout_drawable_5"
                    android:clickable="true"
                    android:ems="4"
                    android:focusable="false"
                    android:gravity="center"
                    android:inputType="textPersonName"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="SELECCIONAR"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorGrisLight"
                    android:textStyle="normal|bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ImgColorCoche"
                    android:layout_width="4dp"
                    android:layout_height="0dp"
                    android:background="@color/colorPrimary"
                    android:clickable="true"
                    app:layout_constraintBottom_toBottomOf="@id/BTSeleccionarColorCoche"
                    app:layout_constraintStart_toStartOf="@id/BTSeleccionarColorCoche"
                    app:layout_constraintTop_toTopOf="@id/BTSeleccionarColorCoche"
                    app:layout_constraintVertical_bias="0.0" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>