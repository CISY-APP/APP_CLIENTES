<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemviaje_publicado"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_drawable_2"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="3dp"
    android:orientation="vertical"
    cardview:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingRight="8dp"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp"
            android:paddingEnd="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha:"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:singleLine="true"
                    android:textColor="#3C3C3C"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/editTextHoraViajesPublicados"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20 / 06 / 2020 a las 08:20"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:singleLine="true"
                    android:textColor="@color/places_ui_default_primary_dark"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Precio:"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:singleLine="true"
                    android:textColor="#3C3C3C"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/editTextPrecioViajesPublicados"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="4.9â‚¬"
                    android:singleLine="true"
                    android:textColor="@color/places_ui_default_primary_dark"
                    android:textSize="14sp" />
                <ImageButton
                    android:id="@+id/imagenEliminarViaje"
                    android:layout_width="18.5dp"
                    android:layout_height="18.5dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/papelera"
                    android:clickable="true"
                    android:focusable="true"
                    android:tint="@color/quantum_grey800" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="2dp"
                    android:layout_gravity="center"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/puntoapunto" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="53dp"
                            android:layout_height="wrap_content"
                            android:text="Origen:"
                            android:layout_marginRight="5dp"
                            android:layout_marginEnd="5dp"
                            android:singleLine="true"
                            android:textColor="#3C3C3C"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/ETOrigenViajePublicado"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Getafe - Estacion de Metro el Bercial"
                            android:singleLine="true"
                            android:textColor="@color/places_ui_default_primary_dark"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="53dp"
                            android:layout_height="wrap_content"
                            android:text="Destino:"
                            android:layout_marginRight="5dp"
                            android:layout_marginEnd="5dp"
                            android:singleLine="true"
                            android:textColor="#3C3C3C"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/ETDestinoViajePublicado"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Getafe - Estacion de Metro el Bercial"
                            android:singleLine="true"
                            android:textColor="@color/places_ui_default_primary_dark"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehiculo:"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:singleLine="true"
                    android:textColor="#3C3C3C"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/ETVehiculoViajePublicado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Marca y modelo"
                    android:singleLine="true"
                    android:textColor="@color/places_ui_default_primary_dark"
                    android:textSize="14sp" />
            </LinearLayout>
            <View
                android:id="@+id/separadorViajePublicado"
                android:layout_marginBottom="3dp"
                android:layout_width="match_parent"
                android:layout_height="0.75dp"
                android:background="@color/colorGris" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RVPersonasViaje"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center" />
        </LinearLayout>
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="15dp"
        android:layout_height="match_parent"
        android:background="@drawable/btn_drawable_8" />
</androidx.cardview.widget.CardView>