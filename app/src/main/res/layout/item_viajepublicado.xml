<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemviaje_publicado"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_drawable_2"
    android:orientation="vertical"
    android:layout_marginBottom="5dp"
    cardview:cardCornerRadius="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:layout_marginLeft="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/editTextHoraViajesPublicados"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FECHA"
                    android:paddingRight="15dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/imagenEliminarViaje"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/papelera"
                    android:clickable="true"
                    android:focusable="true"
                    android:tint="@color/quantum_grey800" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="28dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:tint="@color/colorPrimary"
                    cardview:srcCompat="@drawable/puntoapunto" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ETOrigenViajePublicado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ORIGEN"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/ETDestinoViajePublicado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="DESTINO"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        cardview:drawableTint="@color/colorPrimary" />

                </LinearLayout>


            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RVPersonasViaje"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center" />

        </LinearLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="15dp"
        android:layout_height="match_parent"
        android:background="@drawable/btn_drawable_8" />

</androidx.cardview.widget.CardView>