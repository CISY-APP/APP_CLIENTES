<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".vistas.VentanaLogin">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_logo_coche"
        android:layout_width="380dp"
        android:layout_height="188.1dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.007"
        app:lottie_autoPlay="true"
        app:lottie_fileName="animacion_logo_coche_felis.json"
        app:lottie_imageAssetsFolder="assets"
        app:lottie_loop="true" />

    <LinearLayout
        android:id="@+id/linearLayoutInicioSesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/animation_logo_coche"
        app:layout_constraintVertical_bias="0.112">


        <EditText
            android:id="@+id/editTextUsuarioInicioSesion"
            style="@android:style/Widget.Holo.EditText"
            android:drawableLeft="@drawable/ic_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/layout_drawable_2"
            android:ems="10"
            android:hint="Usuario / Correo Electronico"
            android:inputType="textEmailAddress"
            android:padding="8dp"
            android:singleLine="true"
            android:textColor="@color/places_ui_default_primary_dark"
            android:textColorHint="@color/colorGrisLight"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/textViewErrorUsuarioInicioSesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="start"
            android:text="Error"
            android:visibility="gone"
            android:textColor="@color/colorBlanco"
            android:textStyle="bold"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editTextClaveInicioSesion"
            style="@android:style/Widget.Holo.EditText"
            android:drawableLeft="@drawable/ic_clave"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/layout_drawable_2"
            android:ems="10"
            android:hint="Clave"
            android:inputType="textPassword"
            android:padding="8dp"
            android:singleLine="true"
            android:textColor="@color/places_ui_default_primary_dark"
            android:textColorHint="@color/colorGrisLight"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/textViewErrorClaveInicioSesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="start"
            android:visibility="gone"
            android:text="Error"
            android:textColor="@color/colorBlanco"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewOlvidasteTuClaveInicioSesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="end"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClick"
            android:text="¿Olvidaste tu contraseña?"
            android:textColor="@color/colorBlanco"
            android:textSize="14sp" />

        <Button
            android:id="@+id/buttonLoginInicioSesion"
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:layout_height="50dp"
            android:background="@drawable/layout_drawable_2"
            android:clickable="true"
            android:focusable="true"
            android:enabled="false"
            android:text="@string/login"
            android:textColor="@color/colorGris"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewNoCuentaInicioSesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:text="¿No tienes una cuenta?"
            android:textColor="@color/colorBlanco"
            android:textSize="14sp" />

        <Button
            android:id="@+id/buttonRegistrarInicioSesion"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_height="50dp"
            android:background="@drawable/layout_drawable_2"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/registrar"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>